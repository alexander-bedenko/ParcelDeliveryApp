                    <li><a href="#team">Команда</a></li>
                    <li class="menu-has-children">
                        <a href="">Выбор услуги</a>
                        <ul>
                            <li>@Html.ActionLink("Выбрать подходящую услугу", "FilterOptions", "Property", new { }, new { })</li>
